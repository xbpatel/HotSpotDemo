<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.xbpsolutions.android.hotspotdemo.ConnectionStepOneActivity">


    <TextView
        android:text="Connect to your device in Wi-Fi settings for setup"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Your device has created a temporary Wi-Fi hotspot. To set it up. Connect to it in Wi-Fi settings by following the instructions below."
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />



    <TextView
        android:text="1. Goto Settings > Wi-Fi settings\n\n2. Connect to the Wi-Fi hotspot for the device that you are setting up. It will have a 4-digit number on the end, like the example YourDevice1234.x\n\n3. Come back to the D2Touch application to proceed with setup."
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />


</LinearLayout>
